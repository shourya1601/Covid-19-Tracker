<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#0e134f">

            <ViewFlipper
                android:id="@+id/vf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/view_flipper">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/india_img1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/view_flipper">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/india_img2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/view_flipper">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/india_img3"/>

                </LinearLayout>

            </ViewFlipper>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_below="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_corners">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ACTIVE"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/active"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ACTIVE CASES"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/activenew"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ACTIVE NEW"
                        android:gravity="center"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="RECOVERED"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/recovered"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="RECOVERED CASES"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/recoverednew"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="RECOVERED NEW"
                        android:gravity="center"
                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="DECEASED"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/deceased"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="DECEASED CASES"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/deceasednew"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="DECEASED NEW"
                        android:gravity="center"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CONFIRMED"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/confirmed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CONFIRMED CASES"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_corners">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#dfdbff"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_below="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btAvtive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fcc5ca"
                    android:textStyle="bold"
                    android:layout_marginRight="3dp"
                    android:text="active"/>

                <Button
                    android:id="@+id/btRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fcc5ca"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:text="Recovered"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_below="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btDeceased"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fcc5ca"
                    android:textStyle="bold"
                    android:layout_marginRight="3dp"
                    android:text="Deceased"/>

                <Button
                    android:id="@+id/btTotalCases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fcc5ca"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:text="Total cases"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_below="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/countries_list_item_format"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#c4021c">

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:text="STATE"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE\nNEW INFECTED"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="11dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RECOVERED\nNEW RECOVERED"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DECEASED\nNEW DECEASED"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CASES"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv"
            android:layout_below="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="2400dp"/>

    </RelativeLayout>

</ScrollView>